<WSDItem>:
    spacing: 10
    H4:
        text: root.label
        halign: 'right'
        size_hint_x: root.label_width
        color: [.3, .3, .3, 1]
    H3:
        text: str(root.value)
        halign: 'right'
    H5:
        text: root.unit
        size_hint_x: None
        width: 60
        color: [.3, .3, .3, 1]
